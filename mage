import javax.swing.JOptionPane;

class Mage extends GameCharacter{
	 public Mage(String name) {
		 super(name, 100, 20);
		 
	 }
	 @Override
	 public int attack() {
		 JOptionPane.showMessageDialog(null, name + " casts Fireball!(20 damage)");
		 return attackDamage;
		 }
	 
	 @Override
	 public int specialMove() {
		 JOptionPane.showMessageDialog(null, name + " summons Lightning Bolt! (25 damage)");
		return 25;
	 }
	@Override
	public int secretPower() {
		JOptionPane.showMessageDialog(null, name + " unleashes Meteor Storm! (35 damage)");
		return 35;
	}

}
